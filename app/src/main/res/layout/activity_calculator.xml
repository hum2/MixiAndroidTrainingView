<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.shuheisuzuki.mixitrainingview.CalculatorActivity">
    <TextView
        android:id="@+id/optionalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_larger"
        android:textColor="@color/color_impact"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_larger"
        android:text="0"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/result"/>
    <LinearLayout
        android:background="@color/green_light"
        android:id="@+id/calcLayout1"
        android:layout_below="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="2"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="5"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_dark"
        android:id="@+id/calcLayout2"
        android:layout_below="@+id/calcLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height_normal">
        <Button
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="6"/>
        <Button
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="7"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="9"/>
        <Button
            android:id="@+id/btn0"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_light"
        android:id="@+id/calcLayout3"
        android:layout_below="@+id/calcLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPlus"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="+"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="-"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btnMulti"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="ร"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="รท"/>
        <Button
            android:id="@+id/btn00"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="00"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_dark"
        android:id="@+id/calcLayout4"
        android:layout_below="@+id/calcLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnEquals"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="="/>
        <Button
            android:id="@+id/btnClear"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="C"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="."/>
    </LinearLayout>
</RelativeLayout>
