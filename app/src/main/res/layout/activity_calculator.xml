<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.shuheisuzuki.mixitrainingview.CalculatorActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="0"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/result"/>
    <LinearLayout
        android:background="@color/green_light"
        android:id="@+id/calcLayout1"
        android:layout_below="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="1"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="2"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="3"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="4"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="5"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_dark"
        android:id="@+id/calcLayout2"
        android:layout_below="@+id/calcLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height_normal">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="6"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="7"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="8"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="9"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_light"
        android:id="@+id/calcLayout3"
        android:layout_below="@+id/calcLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="+"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="-"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="ร"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="รท"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="00"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/green_dark"
        android:id="@+id/calcLayout4"
        android:layout_below="@+id/calcLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:text="="/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="."/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_normal"
            android:layout_marginLeft="10dp"
            android:text="C"/>
    </LinearLayout>
</RelativeLayout>
